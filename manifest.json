{
  "manifest_version": 3,
  "name": "Simple Timer",
  "version": "1.0",
  "description": "A simple countdown timer extension",
  "permissions": [
    "notifications",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Simple Timer"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}